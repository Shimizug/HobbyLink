<!DOCTYPE html>
<html>
  <head>
    <title>HobbyLink</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <div class="header-content">
      <%= link_to 'HobbyLink', (admin_signed_in? ? admin_top_path : root_path ) %>
        <ul class="flex">
          <% if admin_signed_in? %>
            <li><%= link_to 'home',   %></li>
            
            <li><%= link_to '会員一覧',   %></li>
            <li><%= link_to '注文履歴一覧',  admin_orders_path %></li>
            <li><%= link_to 'ジャンル一覧',  admin_genres_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          <% elsif customer_signed_in? %>
            <p>ようこそ、<%= current_customer.nickname %>さん!</p>
            <li><%= link_to 'マイページ', mypage_path %></li>
            <li><%= link_to '商品一覧', items_path %></li>
            <li><%= link_to 'カート', cart_items_path %></li>
            <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to '商品一覧', items_path %></li>
            <li><%= link_to '新規登録', new_customer_registration_path %></li>
            <li><%= link_to 'ログイン', new_customer_session_path %></li>
          <% end %>
        </ul>
        <% end %>
        <form class="form-inline mr-5">
         <input type="search" class="form-control mr-sm-2" placeholder="検索..." aria-label="検索...">
         <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0">検索</button>
      </form>
      </div>
    </header>

    <main>
    <%= yield %>
    </main>
    
  </body>
</html>
