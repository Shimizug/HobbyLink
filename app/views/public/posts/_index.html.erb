<table class='table table-bordered border-primary'>
<thead>
    <tr>
      <th>会員画像</th>
      <th>タイトル</th>
      <th>会員ニックネーム</th>
      <th>趣味ジャンル</th>
      <th>投稿日時</th>
      </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td rowspan="2"><%= image_tag post.get_image, size:"100x80" %></td>
        <td><%= post.title %></td>
        <td><%= post.member.nickname %></td>
        <td><%= post.genre.name %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% if post.member.id == current_member.id %>
            <%= link_to '編集画面へ',  edit_post_path(post.id), class: "btn btn-secondary"  %>
          <% else %>
            <%= render "public/favorites/btn", post: post %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td colspan="4"><%= "投稿本文：#{post.body}" %></td>
        <td><%= link_to  '詳細画面へ', post_path(post.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="offset-5 mb-5">
  <%= paginate posts %>
</div>

