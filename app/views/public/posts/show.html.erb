<div class='container'>
  <div class="row">
    <h2>投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-12 col-lg-6">
      <ul class="list-inline">
        <% if @post.member.is_deleted == false %>
          <li class="list-inline-item"><%= link_to "投稿者:#{@post.member.nickname}", member_path(@post.member.id) %></li>
        <% else %>
           <li class="list-inline-item"><%= "投稿者:#{@post.member.nickname}" %></li>
        <% end %>
        <li class="list-inline-item"><%= @post.genre.name %></li>
        <li class="list-inline-item"><%= @post.created_at.strftime('%Y/%m/%d') %></li>
        <% if current_member.id == @post.member.id %>
        <div class="text-warning d-inline">
          <i class="fas fa-star" aria-hidden="true"></i>
          <%= "#{@post.favorites.count} いいね" %>
        </div>
        <% else %>
          <li class="list-inline-item"><%= render "public/favorites/btn", post: @post %></li>
        <% end %>
        <li class="list-inline-item"><%= "コメント数：#{@post.post_comments.count}" %></li>
      </ul>
      <table class="table table-bordered">
        <tr>
          <th>投稿画像</th>
          <th class="text-center"><%= image_tag @post.get_image, size:"80x80" %></th>
        </tr>
        <tr>
          <th>投稿タイトル</th>
          <th><%= @post.title %></th>
        </tr>
        <tr>
          <th>投稿本文</th>
          <th><%= @post.body %></th>
        </tr>
        <% if @post.member == current_member %>
          <tr>
            <th><%= link_to '編集画面へ', edit_post_path(@post), class: "btn btn-secondary" %></th>
            <th><%= link_to '削除する', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></th>
          <% end %>
        </tr>
      </table>
    </div>
    <div class="col-12 col-lg-6">
      <div class="ml-3">
        <h3>コメント一覧</h3>
        <%= render "public/post_comments/index", post: @post, post_comments: @post_comments %>
        <div class="d-flex justify-content-center"><%= paginate @post_comments %></div>
        <% if current_member.email != "guest@example.com" %>
          <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
        <% end %>
      </div>
    </div>
  </div>
</div>
