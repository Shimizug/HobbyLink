<table class="table table-bordered table-striped table-responsive text-center">
  <tr class="table-secondary">
    <th>投稿者</th>
    <th>コメント</th>
    <th>投稿日</th>
    <th></th>
  </tr>
  <tbody>
      <% post_comments.each do |post_comment| %>
      <tr>
        <td class="text-nowrap", style="width: 20%">
        <% if post_comment.member_id != nil %>
          <%= link_to post_comment.member.nickname, member_path(post_comment.member) %>
        <% else %>
          <span class="text-danger">管理人</span>
        <% end %>
        </td>
        <td style="width: 50%"><%= post_comment.comment %></td>
        <td class="text_sm", style="width: 10%"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
          <% if post_comment.member == current_member %>
            <td class="text-center", style="width: 20%">
              <%= link_to "削除する", post_post_comment_path(post, post_comment), class: "btn btn-danger btn-sm text-nowrap" %>
            </td>
          <% else %>
            <td class="text-center", style="width: 20%"></td>
          <% end %>
      </tr>
      <% end %>
  </tbody>
</table>

