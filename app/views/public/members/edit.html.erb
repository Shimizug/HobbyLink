<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員情報編集</h2>
      <%= form_with model: @member, url: update_information_path(@member.id), local: true do |f| %>
        <%= render 'layouts/error_messages', resource: @member %>
        <table class="table table-bordered text-center">
          <tbody>
            <tr>
              <td><%= f.label :profile_image, "プロフィール画像" %></td>
              <td colspan="2"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
            </tr>
            <tr>
              <td>名前</td>
              <td class="text-left">
                <%= f.label :first_name, "(姓)", class: "member_name form-label" %>
                <%= f.text_field :first_name, autofocus: true, :placeholder =>"姓", class: "form-control" %>
              </td>
              <td class="text-left">
                <%= f.label :last_name, "(名)", class: "member_name form-label" %>
                <%= f.text_field :last_name, :placeholder =>"名", class: "form-control" %>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td class="text-left">
                <%= f.label :first_name_kana, "(セイ)", class: "form-label" %>
                <%= f.text_field :first_name_kana, :placeholder =>"セイ（全角カナ）", class: "form-control" %>
              </td>
              <td class="text-left">
                <%= f.label :last_name_kana, "(メイ)", class: "form-label" %>
                <%= f.text_field :last_name_kana, :placeholder =>"メイ（全角カナ", class: "form-control" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス", class: "form-label"%></td>
              <td colspan="2"><%= f.email_field :email, autocomplete: "email",:placeholder =>"メールアドレス", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :nickname, "ニックネーム", class: "form-label" %></td>
              <td colspan="2"><%= f.text_field :nickname, :placeholder =>"ニックネーム", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "自己紹介文", class: "form-label" %></td>
              <td colspan="2"><%= f.text_area :introduction, :placeholder =>"40文字以下で入力してください。", class: "form-control form-control-lg" %></td>
            </tr>
            <tr>
              <td>趣味ステータス</td>
              <td colspan="2">
                <span class="px-5">
                  <%= f.radio_button :hobby_state, "finding_hobby", class: "form-check-input" %>
                  <%= f.label :hobby_state, "趣味探し中", class: "form-check-label" %>
                </span>
                <span class="pe-5">
                  <%= f.radio_button :hobby_state, "pseudo_trial", class: "form-check-input" %>
                  <%= f.label :hobby_state, "趣味を疑似体験したい", class: "form-check-label" %>
                </span>
                <span class="px-5">
                  <%= f.radio_button :hobby_state, "has_hobby", class: "form-check-input" %>
                  <%= f.label :hobby_state, "趣味がある", class: "form-check-label" %>
                </span>
              </td>
            </tr>
            <tr>
					   <td colspan="3">
					      <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
					      <%= link_to "退会する", confirm_unsubscribe_path(@member.id), class: "btn btn-danger" %>
					   </td>
				    </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
