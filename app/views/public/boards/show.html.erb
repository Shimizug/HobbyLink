<div class="container">
  <div class="row">
    <h2>掲示板</h2>
  </div>
  <div class="row">
    <table class="table table-bordered table-dark text-light">
      <caption style="caption-side: top; text-align: right;">タイトル：掲示板概要</caption>
      <thead>
        <tr>
          <th class="col-4"><h5><%= @board.title %></h5></th>
          <th class="col-8"><h6><%= @board.body %></h6></th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="row board-comments-index">
    <%= render partial: "public/board_comments/index", locals: {board: @board, board_comments: @board_comments} %>
  </div>
  <div class="offset-5 mb-5 comment-paginate">
    <%= paginate @board_comments, params: {controller: 'boards', action: 'show', id: @board.id} %>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <% if current_member.email != "guest@example.com" %>
        <%= render "public/board_comments/form", board: @board, board_comment: @board_comment %>
      <% end %>
    </div>
  </div>
</div>


