<% if member_signed_in? || admin_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <table class="table table-borderless", style="border-collapse: collapse; border-spacing: 0; margin: 0; padding: 0;">
      <thead>
        <tr>
          <th><%= f.select :model, options_for_select({ "会員" => "member", "投稿" => "post", "掲示板" => "board" }), class: "form-control" %></th>
          <th><%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), class: "form-control" %></th>
          <th></th>
        </tr>
        <tr>
          <th colspan="2"><%= f.text_field :content, :placeholder =>"キーワード", class: "text-center form-control" %></th>
          <th><%= f.submit '検索', class: "btn btn-warning text-center" %></th>
        </tr>
      </thead>
    </table>
  <% end %>
<% end %>

