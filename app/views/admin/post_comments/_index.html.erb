<table class="table table-bordered table-striped table-sm text-center">
  <thead>
    <tr class="table-secondary">
      <th style="width: 20%">コメント主</th>
      <th style="width: 50%">コメント</th>
      <th style="width: 20%">投稿日</th>
      <th style="width: 10%"> </th>
    </tr>
  </thead>
  <tbody>
      <% post_comments.each do |post_comment| %>
      <tr>
        <td class="text-nowrap">
        <% if post_comment.member_id != nil %>
          <%= post_comment.member.nickname.truncate(10)%>
        <% else %>
          <span class="text-danger">管理人</span>
        <% end %>
        </td>
        <td class="text-left", style="width: 60%"><%= post_comment.comment %></td>
        <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td style="width: 20%">
        <% if post_comment.member_id != nil %>
          <%= link_to "削除", admin_post_post_comment_path(post, post_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger btn-sm text-nowrap" %>
        <% else %>
          <%= link_to "削除", admin_post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger btn-sm text-nowrap" %>
        <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

