<div class="container">
  <div class="row">
    <h2>お気に入り一覧</h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>投稿画像</th>
          <th>ニックネーム</th>
          <th>タイトル</th>
        </tr>
      </thead>
      <tbody>
        <% @favorites.each do |favorite| %>
          <tr>
            <td class="text-center">
              <%= link_to admin_post_path(favorite.post.id) do %>
               <%= image_tag favorite.post.get_image, size:"40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_member_path(favorite.member.id) do %>
                <%= favorite.post.member.nickname %>
              <% end %>
            </td>
            <td><%= favorite.post.title %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
