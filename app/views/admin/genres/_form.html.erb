<%= form_with model:genre, url: admin_genres_path do |f| %>
  <table class="table table-bordered text-center">
    <thead>
      <tr>
        <td class="text-nowrap"><%= f.label :name ,"ジャンル名", class: "form-label" %></td>
        <td><%= f.text_field :name, :placeholder =>  "ジャンルタイトル", class: 'form-control' %></td>
      </tr>
       <tr>
            <td><%= f.label :body, "説明文", class: "form-label" %></td>
            <td><%= f.text_area :body, :placeholder =>  "ジャンルの説明文", class: 'form-control' %></td>
          </tr>
      <tr>
        <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success text-center" %></td>
      </tr>
    </thead>
  </table>
<% end %>

