<table class='table table-boadered'>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th>説明</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.body %></td>
        <td><%= link_to "編集画面へ", edit_admin_genre_path(genre.id), class: "btn btn-success text-nowrap" %>
      </tr>
    <% end %>
  </tbody>
</table>