<table class='table table-bordered text-center'>
  <thead class="table-secondary">
    <tr>
      <th>会員画像</th>
      <th>タイトル</th>
      <th>会員ニックネーム</th>
      <th>趣味ジャンル</th>
      <th>投稿日時</th>
      <th>会員ステータス</th>
      </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td rowspan="2"><%= image_tag post.get_image, size:"100x80" %></td>
        <td><%= post.title %></td>
        <td><%= post.member.nickname %></td>
        <td><%= post.genre.name %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% unless post.member.is_deleted? %>
    			  <span>有効</span>
    			<% else %>
    				<span>退会済み</span>
    			<% end %>
        </td>
      </tr>
      <tr>
        <td colspan="4"><%= "投稿本文：#{post.body}" %></td>
        <td><%= link_to  '詳細画面へ', admin_post_path(post.id), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
