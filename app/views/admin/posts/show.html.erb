<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-md-6">
      <h2>投稿詳細</h2>
    </div>
    <div class="col-md-5 offset-md-1">
      <h2>コメント一覧</h2>
    </div>
  </div>
  <div class="row">
    <ul class="list-inline">
      <li class="list-inline-item">投稿者:<%= @post.member.nickname %></li>
      <li class="list-inline-item">趣味ジャンル:<%= @post.genre.name %></li>
      <li class="list-inline-item">投稿日:<%= @post.created_at.strftime('%Y/%m/%d') %></li>
      <div class="text-warning d-inline">
        <i class="fas fa-star" aria-hidden="true"></i>
        <%= "#{@post.favorites.count} いいね" %>
      </div>
      <li class="list-inline-item"><%= "コメント数：#{@post.post_comments.count}" %></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table table-bordered text-center">
        <tr>
          <th>投稿画像</th>
          <th><%= image_tag @post.get_image, size:"80x80" %></th>
        </tr>
        <tr>
          <th>投稿タイトル</th>
          <th><%= @post.title %></th>
        </tr>
        <tr>
          <th>投稿本文</th>
          <th><%= @post.body %></th>
        </tr>
        <tr>
          <th colspan="2"><%= link_to '削除する', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></th>
        </tr>
      </table>
    </div>
    <div class="col-md-5 offset-md-1">
      <%= render "admin/post_comments/index", post: @post, post_comments: @post_comments %>
      <div class="d-flex justify-content-center"><%= paginate @post_comments %></div>
      <%= render "admin/post_comments/form", post: @post, post_comment: @post_comment %>
    </div>
  </div>
</div>
